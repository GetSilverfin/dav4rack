#!/usr/bin/env ruby

require 'rubygems'
require 'dav4rack'

app = Rack::Builder.new do
  use Rack::ShowExceptions
  use Rack::CommonLogger
  use Rack::Reloader
  use Rack::Lint
  
  run DAV4Rack::Handler.new

end.to_app

begin
  Rack::Handler::Mongrel.run(app, :Port => 3000)
rescue
  Rack::Handler::WEBrick.run(app, :Port => 3000)
end
